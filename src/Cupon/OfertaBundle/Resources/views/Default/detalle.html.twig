{% extends '::frontend.html.twig' %}

{% block title %}Detalle de {{ oferta.nombre }}{% endblock %}
{% block id 'oferta' %}

{% block content %}
    {% include 'OfertaBundle:Default/includes:oferta.html.twig' %}
{% endblock %}


{% block login %}

    {{ parent() }}

    <section id="relacionadas">
        <h2>Ofertas en otras ciudades</h2>
        <ul>
            {% for relacionada in relacionadas %}
                <li>{{ relacionada.ciudad.nombre }}:
                    <a href="{{ path('oferta', {'ciudad': relacionada.ciudad.slug, 'slug': relacionada.slug}) }}">{{ relacionada.nombre | truncate(12, true, "...")}}</a>
                </li>
            {% endfor %}
        </ul>
    </section>

    <aside>
        ## FORMULARIO DE LOGIN ##
        <section id="nosotros">
            <h2>Sobre nosotros</h2>
            <p>Lorem ipsum dolor sit amet...</p>
        </section>
    </aside>
{% endblock %}