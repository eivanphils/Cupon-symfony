<section class="oferta mini">
    <div class="descripcion">
        <h2>
            <a href="{{ path('oferta', { 'ciudad': ciudad.slug, 'slug': oferta.slug }) }}">{{ oferta.nombre }}</a>
        </h2>

        {{ oferta.descripcion | mostrar_como_lista }}

        <a href="#" class="btn btn-flat">Comprar</a>
    </div>
    
    <div class="galeria">
        <img src="{{ asset('uploads/images/'~oferta.foto) }}" alt="">

        <p class="precio">{{ oferta.precio }} &euro; <span>{{ descuento(oferta.precio, oferta.descuento) }}</span></p>

        <p>Disfruta de la oferta en</p>
    </div>
</section>