{% extends '::frontend.html.twig' %}

{% block title %}
    Ofertas recientes en {{ ciudad.nombre }}
{% endblock %}

{% block id 'recientes' %}

{% block content %}
    <h1>Ofertas recientes en <strong>{{ ciudad.nombre }}</strong></h1>

    {% for oferta in ofertas %}
        {% include 'OfertaBundle:Default/includes:minioferta.html.twig' %}
    {% else %}
        <p>Esta ciudad todav&iacute no ha publicado niguna oferta</p>
    {% endfor %}

{% endblock %}

{% block aside %}

    <section id="cercanas">
        <h2>Ofertas en otras ciudades</h2>
        <ul>
            {% for ciudad in cercanas %}
                <li><a href="{{ path('recientes',{ 'ciudad': ciudad.slug }) }}">{{ ciudad.nombre }}</a></li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}